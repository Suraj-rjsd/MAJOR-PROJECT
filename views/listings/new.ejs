<% layout( "/layouts/boilerplate" ) %>

    <body>
        <div class="container mt-4">
            <div class="row">
                <div class="col-8 offset-2">
                    <h1>Create New Listing</h1>
                    <form action="/listings" method="post" class="needs-validation" novalidate
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title:</label>
                            <input type="text" class="form-control" id="title" name="listing[title]" required>
                        </div>


                        <div class="mb-3">
                            <label for="description" class="form-label">Description:</label>
                            <textarea id="description" class="form-control" name="listing[description]"
                                required></textarea>
                        </div>


                        


                        <div> <label for="image" class="form-label">Upload Image</label>
                            <input type="file" class="form-control" name="listing[image][url]" required />
                        </div class="mb-3">





                        <div class="mb-3"> <label for="price" class="form-label">Price:</label>
                            <input id="price" class="form-control" name="listing[price]" required>
                        </div>


                        <div class="mb-3"> <label for="location" class="form-label">Location:</label>
                            <input type="text" id="location" class="form-control" name="listing[location]" required>
                        </div>


                        <div class="mb-3"> <label for="country" class="form-label">Country:</label>
                            <input type="text" id="country" class="form-control" name="listing[country]" required>
                        </div>


                        <button type="submit" class="btn btn-dark new-btn">Create Listing</button>
                    </form>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    </body>