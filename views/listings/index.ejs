<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h2 class="text-center mb-4">All Listings</h2>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% listings.forEach(listing => { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-sm">
            
            <!-- Image with fallback -->
            <img 
              src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>" 
              class="card-img-top" 
              alt="Listing image">

            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text text-muted mb-2"><%= listing.location %>, <%= listing.country %></p>
              <p class="fw-bold">&#8377;<%= Number(listing.price).toLocaleString("en-IN") %></p>
            </div>

          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>
